	"item": [
		{
			"name": "Get Access Token (Client Credentials)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let resp = pm.response.json();",
							"if (resp.access_token) {",
							"   pm.environment.set('access_token', resp.access_token);",
							"   console.log('Access token actualizado');",
							"} else {",
							"   console.error('No se encontró access_token en la respuesta');",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "client_credentials",
							"type": "text"
						},
						{
							"key": "client_id",
							"value": "realm-admin",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "8nWwBGuo0RxdRQfHUaQgcqv7Fibt8JYX",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{keycloak_host}}/realms/{{realm}}/protocol/openid-connect/token",
					"host": [
						"{{keycloak_host}}"
					],
					"path": [
						"realms",
						"{{realm}}",
						"protocol",
						"openid-connect",
						"token"
					]
				}
			},
			"response": []
		},
